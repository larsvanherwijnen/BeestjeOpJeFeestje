@using Web.Controllers
@model Web.ViewModels.AnimalViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name - Details</h1>

<div>
    <h4>Animal</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.Image"/>
        </dd>
    </dl>

    @if(Model.Bookings != null)
    {
        <h4>Bookings</h4>
        foreach (var booking in Model.Bookings)
        {
            <hr/>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => booking.Date)
                </dt>
                <dd class="col-sm-11">
                    @Html.DisplayFor(model => booking.Date)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => booking.Customer.Name)
                </dt>
                <dd class="col-sm-11">
                    @Html.DisplayFor(model => booking.Customer.Name)
                </dd>
                @foreach(var animal in booking.Animals)
                {
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => animal.Name)
                    </dt>
                    <dd class="col-sm-11">
                        @Html.DisplayFor(model => animal.Name)
                    </dd>
                }
            </dl>
        }
    }
    else
    {
        <h4>Geen boekingen</h4>
    }
</div>